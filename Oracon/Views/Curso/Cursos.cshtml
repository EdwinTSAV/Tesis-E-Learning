@{
    ViewData["Title"] = ViewBag.Nombre;
    var cursos = (List<Curso>)Model;
    string docente;
}

<section class="feature-section ptb-100 gray-light-bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-9 col-lg-8">
                <div class="section-heading text-center">
                    <h2>Nuestros Cursos</h2>
                    <p class="lead">Presentamos los cursos que poseemos actualmente, todos nuestros cursos presentados son totalmente gratuitos.</p>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (var item in cursos)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="features-box mt-4 text-center border rounded p-4 bg-white">
                        <div class="features-box-icon mb-3">
                            <a href="/Curso/Detalle?idCurso=@item.Id">
                                <img alt="@item.Nombre" src="@item.Imagen" class="img-fluid rounded" />
                            </a>
                        </div>
                        <div class="features-box-content">
                            @if (item.Nombre.Length > 50)
                            {
                                <h5>@item.Nombre.Substring(0, 50) ...</h5>
                            }
                            else
                            {
                                <h5>@item.Nombre</h5>
                            }
                            <ul>
                                <li>
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                    @{docente = item.Docente.Nombres + " " + item.Docente.Apellidos;}
                                    @if (docente.Length > 50)
                                    {
                                        <span>@docente.Substring(0, 50) ...</span>
                                    }
                                    else
                                    {
                                        @docente
                                    }
                                </li>
                                <li><i class="fa fa-book" aria-hidden="true"></i> @item.Categoria.Nombre</li>
                                <li>
                                    @if (item.Precio > 0)
                                    {
                                        <span>S/ @item.Precio</span>
                                    }
                                    else
                                    {
                                        <span>Gratuito</span>
                                    }
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>